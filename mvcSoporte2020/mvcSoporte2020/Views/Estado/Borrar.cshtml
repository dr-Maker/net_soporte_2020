@model DataSoporte2020.Data.estado

@{
    ViewBag.Title = "Borrar";
    ViewBag.TitlePag = "Borrar estado";
    Layout = "~/Views/Shared/_Plantilla.cshtml";
}

<form method="post">

    <div class="form-group">
        <label>Id.Estado</label>
        <input class="form-control" type="number" name="idestado" value="@Model.idestado" readonly />
    </div>

    <div class="form-group">
        <label>Desc.Estado</label>
        <input class="form-control" type="text" name="desc_estado" value="@Model.desc_estado" readonly />
    </div>

    <div class="form-group">
        <input class="btn btn-danger" type="submit" value="Eliminar" />
    </div>
</form>
<p>
    @Html.ActionLink("Volver", "Index")
</p>